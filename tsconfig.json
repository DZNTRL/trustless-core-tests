{
    "compilerOptions": {
        "module": "commonjs",
        "outDir":"./dist/js/",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target":"ES2020",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "jsx": "react",
        "declaration": true
    },
    "include": [
        "src/**/*.ts", "src/index.ts", "src/tests/**/*.spec.ts", "src/*.tsx", "src/public/app.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "types": ["node"]
}
